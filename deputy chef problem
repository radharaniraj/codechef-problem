#include<iostream>
using namespace std;
int main()
{
    int y;
    cin>>y;
    while(y--)
    {
    int n,t=0;
    cin>>n;
    int arr[n],a[n];
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    for(int j=0;j<n;j++)
    {
        cin>>a[j];
    }
    for(int k=0;k<n;k++)
    {
         if(k==0)
           {
               if(a[k]>arr[k+(n-1)]+arr[k+1]);
               {
               if(a[k]>t)
               {
               t=a[k];

           }
           }
           if(k==n-1)
           {
               if(a[k]>t)
               {
               t=a[k];

           }
              if(a[k]>a[k-1]+a[0]);
           }
       if(a[k]>arr[k-1]+arr[k+1])
       {
           if(a[k]>t)
           {
               t=a[k];

           }

       }
    }
    }
    if(t!=0)
    {
        cout<<t<<endl;
    }
    else
    {
        cout<<"-1"<<endl;
    }
    }

}
